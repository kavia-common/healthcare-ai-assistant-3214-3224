[flake8]
max-line-length = 100
extend-ignore =
    # Allow line break before binary operator (old style) and other style nits
    W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    .idea,
    .vscode,
    interfaces,
    */site-packages/*

per-file-ignores =
    # Allow __init__ modules to have unused imports re-exported
    */__init__.py:F401
